@model IEnumerable<Lazybank.Web.ViewModels.TransferPaymentViewModel>


@(Html.Kendo()
    .Grid(Model)
    .Name(Guid.NewGuid().ToString())
    .Columns(columns =>
    {
        columns.Bound(col => col.OrderingName);
        columns.Bound(col => col.OrderingAccount);
        columns.Bound(col => col.BeneficiaryName);
        columns.Bound(col => col.BeneficiaryAccount);
        columns.Bound(col => col.Amount);
        columns.Bound(col => col.CreatedOn);
        columns.Bound(col => col.Status);
    })
    .ColumnMenu()
    .Pageable(page => page.Refresh(true))
    .Sortable()
    .Filterable()
    .Groupable()
    .DataSource(d => d.Ajax()
                .PageSize(5)
                .Model(model => model.Id(m => m.Id))
                .ServerOperation(false)))
