@using Lazybank.Web.Infrastructure;
@model Lazybank.Web.ViewModels.BalanceViewModel
@{
    ViewBag.Title = "Your balance";
}

<h1>@ViewBag.Title</h1>

<div class="container">
    @if (Model.Individuals.Any())
    {
        foreach (var client in Model.Individuals)
        {
            <div class="row">
                <div class="col-md-12" style="padding-right:30px">
                    <div class="row">
                        <h4>
                            @client.Name
                        </h4>
                    </div>
                    <div class="row">
                        @(Html.Kendo()
                            .Grid<Lazybank.Web.ViewModels.BankAccountViewModel>()
                            .Name("grid")
                            .Columns(columns =>
                                 {
                                 columns.Bound(col => col.Number);
                                 columns.Bound(col => col.Balance).EditorTemplateName("Currency");
                                 columns.Bound(col => col.Currency);
                            })
                            .ColumnMenu()
                            .Pageable(page => page.Refresh(true))
                            .Sortable(sort => sort.SortMode(GridSortMode.MultipleColumn))
                            .Groupable()
                            .Filterable()
                            .DataSource(data =>
                            {
                                data
                                .Ajax()
                                .PageSize(5)
                                .Sort(sort => sort.Add(account => account.Number))
                                .Read(read => read.Action("Read", "BalanceCheck"));
                            }))
                    </div>                  
                </div>
            </div>
            <hr />
        }
    }

    @if (Model.Companies.Any())
    {
        foreach (var client in Model.Companies)
        {
            <div class="row">
                <div class="col-md-12" style="padding-right:30px">
                    <div class="row">
                        <h4>
                            @client.Name
                        </h4>
                    </div>
                    <div class="row">
                        @if (client.Accounts.Any())
                        {
                            foreach (var account in client.Accounts)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        @account.Number
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <hr />
        }
    }
</div>
